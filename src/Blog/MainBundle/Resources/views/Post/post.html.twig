{% extends 'base.html.twig' %}
{% set metaTags = true %}
{% block metaTagsView %}
<!-- Update your html tag to include the itemscope and itemtype attributes. -->
<html itemscope itemtype="http://schema.org/Article">

<!-- Place this data between the <head> tags of your website -->
<title>{{ post.title }}</title>
<meta name="description" content="{{ post.metaDescription }}" />

<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="{{ post.title }}">
<meta itemprop="description" content="{{ post.metaDescription }}">
<meta itemprop="image" content="{{ post.imagePath }}">

<!-- Twitter Card data -->
<meta name="twitter:card" content="{{ post.imagePath }}">
<meta name="twitter:site" content="@publisher_handle">
<meta name="twitter:title" content="{{ post.title }}">
<meta name="twitter:description" content="{{ post.metaDescription }}">
<meta name="twitter:creator" content="@author_handle">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image:src" content="{{ post.imagePath }}">

<!-- Open Graph data -->
<meta property="og:title" content="{{ post.title }}" />
<meta property="og:type" content="article" />
<meta property="og:url" content="http://www.BestOfWebflix.com/" />
<meta property="og:image" content="{{ post.imagePath }}" />
<meta property="og:description" content="{{ post.metaDescription }}" />
<meta property="og:site_name" content="Best Of Webflix" />
<meta property="article:published_time" content="{{ post.dateCreated|date('c') }}" />
<meta property="article:modified_time" content="{{ post.lastEdited|date('c') }}" />
<meta property="article:section" content="Article Section" />
<meta property="article:tag" content="Article Tag" />
<meta property="fb:admins" content="Facebook numberic ID" />
{% endblock %}
{% block body %}
    <div class="row">
        <!-- Bread Crumb Start -->
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">{{ post.title }}</li>
            </ol>
        </div>
        <!-- Bread Crumb End -->
        <!-- Content Column Start -->
        <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12 equalcol conentsection" style="height: 2542px;">
            <!-- Blog Detail Started -->
            <div class="blogdetail sections">
                {#<div class="row">#}
                    <div class="bootstrap-carousel">
                        <div class="carousel slide">
                            <img src="{{ post.imagePath }}" alt="" class="img-responsive" />
                        </div>
                    </div>
                {#</div>#}
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="avatar">
                            <figure>
                                {% image '@BlogMainBundle/Resources/public/VideoMagazine/images/avatar.gif' output='assets/img/avatar.gif' %}
                                    <img src="{{ asset_url }}" alt="" class="img-responsive" />
                                {% endimage %}
                            </figure>
                            <h5>By Best Of Webflix</h5>
                            <p>
                                Best Weflix On Instant
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-8 col-xs-12">
                        <div class="blogtext">
                            <h2 class="heading">{{ post.title }}</h2>
                            <div class="clearfix"></div>
                            <div class="blogmetas">
                                <ul>
                                    <li><i class="fa fa-calendar"></i>{{ post.dateCreated|date('Y-m-d') }}</li>
                                    <li>
                                        <i class="fa fa-align-justify"></i>
                                        {% for genre in post.tags %}
                                            <a href="#">{{ genre.name }}</a>
                                        {% endfor %}
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            {{ post.body|raw }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- Blog Detail End -->
            <div class="clearfix"></div>
            <!-- Contents Section Started -->

            <!-- Contents Section End -->
            <div class="clearfix"></div>
            <!-- Contents Section Started -->
            <div class="sections">
                <h2 class="heading">Comments ({{ messages|length() }})</h2>
                <div class="clearfix"></div>
                <div id="comments">
                    {% for message in messages %}
                    <div class="media">
                        {% image '@BlogMainBundle/Resources/public/VideoMagazine/images/avatar1.jpg' output='assets/img/images/avatar1.jpg' %}
                            <img src="{{ asset_url }}" alt="" class="img-responsive" />
                        {% endimage %}
                        <div class="media-body">
                            <h4 class="media-heading"><a href="#">{{ message.createdBy.username }}</a></h4>
                            <time datetime="2014-05-12T17:02">{{ message.dateCreated|date('Y-m-d') }}</time>
                            <p>
                                {{ message.message }}
                            </p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <!-- Contents Section End -->
            <div class="clearfix"></div>
            <!-- Contents Section Started -->
            <div class="sections">
                <h2 class="heading">Leave Reply</h2>
                <div class="clearfix"></div>
                <div id="leavereply">
                    {% if app.user %}
                        <div class="col-md-8">
                            {{ form(form) }}

                        </div>
                    {% endif %}
                </div>
            </div>
            <!-- Contents Section End -->
            <div class="clearfix"></div>
        </div>
        <!-- Content Column End -->
        <!-- Gray Sidebar Start -->
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 equalcol graysidebar" style="height: 2542px;">
            <!-- Recent Post Widget start -->
            <div class="widget">
                <h2 class="heading">Recent Posts</h2>
                <div class="videolistsmall">
                    <ul class="bloglist">
                        {% for recent in recentPost|slice(0,4) %}
                            {% if recent.id != post.id %}
                                <li>
                                    <div class="media">
                                        <a href="{{ path('blog_main_post', { 'id' : recent.id }) }}" class="pull-left">
                                            {% if recent.imagePath != null %}
                                                <img src="{{ recent.imagePath }}" alt="" class="media-object img-responsive hovereffect" />
                                            {% else %}
                                                {% image '@BlogMainBundle/Resources/public/VideoMagazine/images/img16.jpg' output='assets/img/images/' %}
                                                <img src="{{ asset_url }}" alt="" class="media-object img-responsive hovereffect" />
                                                {% endimage %}
                                            {% endif %}
                                        </a>
                                        <div class="media-body">
                                            <h5><a href="{{ path('blog_main_post', { 'id' : recent.id }) }}">{{ recent.title }}</a></h5>
                                            <ul>
                                                <li><i class="fa fa-clock-o"></i>{{ recent.dateCreated|date('Y-m-d') }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- Recent Post Widget end -->
            <!-- Advertisement start -->
            <div class="widget">
                {#<img src="images/adv2.gif" class="img-responsive" alt="">#}
            </div>
            <div class="clearfix"></div>
            <!-- Advertisement End -->
        </div>
        <!-- Gray Sidebar End -->
    </div>
{% endblock body %}
