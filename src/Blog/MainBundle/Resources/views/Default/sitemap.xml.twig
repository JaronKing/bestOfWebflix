<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="{{asset("sitemap.xsl")}}"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for post in posts %}
        <url>{# check if hostname is not alreay in url#}
            <loc>http://{%if path('blog_main_post', { 'id' : post.id })|replace({hostname:''}) == path('blog_main_post', { 'id' : post.id })%}{{hostname}}{{path('blog_main_post', { 'id' : post.id })}}{%else%}{{path('blog_main_post', { 'id' : post.id })}}{%endif%}</loc>
            {% if post.lastEdited is defined %}
                <lastmod>{{post.lastEdited|date('c')}}</lastmod>
            {% endif %}
            {% if url.changefreq is defined %}
                <changefreq>{{url.changefreq}}</changefreq>
            {% endif %}
            {% if url.priority is defined %}
                <priority>{{url.priority}}</priority>
            {% endif %}
        </url>
    {% endfor %}
</urlset>
